<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/topBar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Question: Communist countries worked on the premise that economic well-being could be best attained by"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="20dp">

        <RadioButton
            android:id="@+id/chooseA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="false"
            android:textSize="20dp"
            android:text="A market economy." />

        <RadioButton
            android:id="@+id/chooseB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="false"
            android:textSize="20dp"
            android:text="A strong reliance on prices and individuals' self-interests." />

        <RadioButton
            android:id="@+id/chooseC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="false"
            android:textSize="20dp"
            android:text="A system of large privately-owned firms." />

        <RadioButton
            android:id="@+id/chooseD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:checked="false"
            android:text="The actions of government central planners." />
    </RadioGroup>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Previous"
            android:textSize="25dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1/10"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Next"
            android:textSize="25dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>