<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:columnCount="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/onThi"
            android:onClick="actionOnThi"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:background="@color/topBar"
            android:gravity="center"
            android:text="Ôn Thi"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/thiThu"
            android:onClick="actionThiThu"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:background="@color/topBar"
            android:gravity="center"
            android:text="Thi Thử"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/thiThat"
            android:onClick="actionThiThat"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:background="@color/topBar"
            android:gravity="center"
            android:text="Thi Thật"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lichSu"
            android:layout_width="0dp"
            android:onClick="actionLichSu"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:background="@color/topBar"
            android:gravity="center"
            android:text="Lịch Sử"
            android:textSize="20dp" />

    </GridLayout>
</ScrollView>